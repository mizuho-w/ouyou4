<div class="body">
  <div class="container">
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
      <% end %>
  　<div class="row">
  　　<div class="col-xs-3">
    　<h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>
    <table class="table">
      <tbody><tr></tr> 
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
      <tr>
        <th>follows</th>
        <th>
          <%= link_to(follows_user_path(@user)) do %>
          <%= @user.followings.count %>
          <% end %>
          </th>
      </tr>
      <tr>
        <th>followers</th>
        <th>
          <%= link_to(followers_user_path(@user)) do %>
          <%= @user.followers.count %>
            <% end %>
          </th>
      </tr>
</tbody></table>

<div class="row">
   <% unless current_user == @user %>
        <% if current_user.following?(@user) %>
         <%= form_for(current_user.relationships.find_by(follow_id: @user.id), html: { method: :delete }) do |f| %>
           <%= hidden_field_tag :follow_id, @user.id %>
           <%= f.submit "フォローを外す", class: 'btn btn-primary btn-block' %>
         <% end %>
        <% else %>
         <%= form_for(current_user.relationships.build) do |f| %>
           <%= hidden_field_tag :follow_id, @user.id %>
           <%= f.submit "フォローする", class: 'btn btn-success btn-block' %>
         <% end %>
        <% end %>
       <% end %>
</div>

    <h2>New book</h2>
    <%= form_for(@newbook) do |f| %>

     <h4>Title</h4>
     <%= f.text_field :title %>

     <h4>Body</h4>
    <%= f.text_area :body %>

    <p><%= f.submit "Create Book", class:"col-xs-12 btn btn-primary " %></p>
    <% end %>

  </div>

  <div class="col-xs-9">
    <h2>Book detail</h2>

    <table class="table table-hover table-inverse">
  <thead>
    <tr> 
      <th colspan="2"></th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td>
          <%= link_to user_path(@user.id) do %>
          <%= attachment_image_tag @user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %><br>
          <%= @user.name %>
           <% end %> 
          </td>
        <td><%= link_to "#{@book.title}", book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <% if @user == current_user %>
        <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success" %></td>
        <td><%= link_to "Destroy", book_path(@book.id), class:"btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        <td>
        <% if @book.favorited_by?(current_user) %>
            <%= link_to book_favorites_path(@book), method: :delete, remote: true do %>
             <i class="glyphicon glyphicon-heart" aria-hidden="true" style="color: red;"></i>
            <%= @book.favorites.count %> 
            <% end %>
        <% else %>
            <%= link_to book_favorites_path(@book), method: :post, remote: true do %>
            <i class="glyphicon glyphicon-heart" aria-hidden="true"></i>
            <%= @book.favorites.count %> 
            <% end %>
        <% end %>
      </td>
      <td>コメント数：
        <%= @book.book_comments.count %>
      </td>
        <% end %>
      </tr>
  </tbody>
　　</table>
<ol>
  <% @book.book_comments.each do |book_comment| %>
    <li class="comment">
      <div class="comment-body bb">
        <div class="comment-avatar">
          <div class="avatar">
            <%= attachment_image_tag @user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg"%>
          </div>
        </div>
        <div class="comment-text">
          <div class="comment-entry"><%= book_comment.comment %></div>
           <% if book_comment.user == current_user %>
            <div>
              <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger pull-right" %>
            </div>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
</ol>
<%= form_for [@book, @book_comment] do |f| %>
  <div class="row">
    <div class="col-sm-12">
      <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
    </div>
  </div>
  <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
<% end %>

  </div>
</div>
</div>
</div>  

</body>